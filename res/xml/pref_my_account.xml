<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    
    <EditTextPreference
        android:key="userName"
        android:maxLines="1"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:title="@string/pref_my_account_login" />
    
    <ListPreference
        android:key="foundStrategy"
        android:defaultValue="mark"
        android:entries="@array/pref_my_account_found_strategy_titles"
        android:entryValues="@array/pref_my_account_found_strategy_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_my_account_found_strategy" 
        android:dependency="userName" />
    
</PreferenceScreen>
