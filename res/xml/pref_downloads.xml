<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="downloadImagesStrategy"
        android:defaultValue="onlyOnWIFI"
        android:entries="@array/pref_download_images_strategy_titles"
        android:entryValues="@array/pref_download_images_strategy_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_download_images_strategy" 
    />    
    
    <CheckBoxPreference
        android:key="useExistingImages"
        android:title="@string/pref_download_use_existing_images" 
        android:summary="@string/pref_download_use_existing_images_desc" 
        android:defaultValue="true"
    />    
    
    <org.bogus.android.IntListPreference
        android:key="limitCacheLogs"
        android:defaultValue="20"
        android:entries="@array/pref_download_logs_count_titles"
        android:entryValues="@array/pref_download_logs_count_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_download_logs_count" 
    />    

    <CheckBoxPreference
        android:key="listTrackables"
        android:title="@string/pref_download_list_trackables" 
        android:summary="@string/pref_download_list_trackables_desc" 
        android:defaultValue="true"
    />    
    
    <org.bogus.android.ButtonPreference
        android:key="resetLocusDontAskAgain"
        android:title="@string/pref_download_reset_locus_dont_ask_again"
        android:summary="@string/pref_download_reset_locus_dont_ask_again_desc"
        android:text="@string/pref_download_reset_locus_dont_ask_again_btn"
    />
    
</PreferenceScreen>
