<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.Main" parent="android:Theme.Light">
        <item name="android:listSeparatorTextViewStyle">@style/Widget.TextView.ListSeparator</item>
        <item name="android:scrollViewStyle">@style/ScrollViewStyle</item>
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textColorPrimaryDisableOnly">@color/primary_text_light_disable_only</item>
        
        <item name="android:windowBackground">@color/bright_background_light</item>
    </style>

    <style name="TextAppearance.Large" 
           parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/bright_foreground_light</item>
        <item name="android:textColorPrimaryDisableOnly">@color/bright_foreground_light</item>
    </style>
    <style name="TextAppearance.Medium" 
           parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/bright_foreground_light</item>
        <item name="android:textColorPrimaryDisableOnly">@color/bright_foreground_light</item>
    </style>
    <style name="TextAppearance.Small" 
           parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/bright_foreground_light</item>
        <item name="android:textColorPrimaryDisableOnly">@color/bright_foreground_light</item>
    </style>
    
</resources>
